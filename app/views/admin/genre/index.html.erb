<% if flash[:notice] %>
<div class="alert alert-success"><%= notice %></div>
<% end %>

<h4 class="mt-3 ml-3">
  <span class="bg-light p-2">ジャンル追加/一覧</span>
</h4>

<div class="container">
  <div class="row mx-auto">
    <div class="col-md-3"></div>
    <div class="col-md-7 pt-4">
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <%= f.label :"ジャンル名", class: "mr-4" %>
      <%= f.text_field :genre_name, :size=>"25", :placeholder => "ジャンル名を入力してください" %>
      <%= f.submit :"新規登録", class: "btn btn-success ml-4" %>
    <% end %>
    </div>
  </div>

  <div class="row mx-auto pt-5">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <table class="w-100">
        <thead class="border-top bg-light">
          <tr>
            <th class="pt-3 pb-3">ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
        <tbody class="border-top border-bottom">
          <tr>
            <td class="pt-3 pb-3"><%= genre.genre_name %></td>
            <td class="pt-3 pb-3"><%= link_to "編集", admin_genre_edit_path(genre.id), class: "btn btn-success pr-5" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>