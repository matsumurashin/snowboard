<% if flash[:notice] %>
<div class="alert alert-success"><%= notice %></div>
<% end %>

<h4 class="mt-3 ml-3">
  <span class="bg-light p-2">ジャンル編集</span>
</h4>

<div class="container">
  <div class="row mt-5">
    <div class="col-md-7">
    <%= form_with model: @genre, url: admin_genre_edit_path(@genre.id) do |f| %>
      <%= f.label "ジャンル名", class: "mr-4" %>
      <%= f.text_field :genre_name, :size=>"25", :placeholder => "ジャンル名を入力してください" %>
      <%= f.submit :"変更を保存", class: "btn btn-success" %>
    <% end %>
    </div>
  </div>
</div>