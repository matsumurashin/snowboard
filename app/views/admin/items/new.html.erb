<h4 class="mt-3 ml-3">
  <span class="bg-light p-2">商品新規登録</span>
</h4>

<div class="container">
  <div class="row">
    <div class="mx-auto">
  <%= form_with model: @item, url: admin_items_path do |f| %>
      <table cellpadding="5">
        <tr>
          <th><%= f.label :"商品画像" %></th>
          <td><%= f.file_field :images, accept: "image/*" %></td>
        </tr>
        <tr>
          <th><%= f.label :"商品名" %></th>
          <td><%= f.text_field :name, :placeholder => "商品名" %></td>
        </tr>
        <tr>
          <th><%= f.label :"商品説明" %></th>
          <td><%= f.text_area :introduction, :placeholder => "ここに説明文を記述します" %></td>
        </tr>
        <tr>
          <th><%= f.label :"ジャンル" %></th>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :genre_name, include_blank: "選択して下さい" %></td>
        </tr>
        <tr>
          <th><%= f.label :"税抜価格" %></th>
          <td><%= f.text_field :price %>円</td>
        </tr>
      </table>

    <%= f.submit :"新規登録",  class: "mx-auto d-block btn btn-success mt-3" %>
  <% end %>
    </div>
  </div>
</div>
