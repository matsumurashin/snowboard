<h4 class="mt-3 ml-3">
  <span class="bg-light p-2"><%= @customer.full_name %>さんの会員情報編集</span>
</h4>

<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
    　<table cellpadding="5">
      　<tr>
        　<th>会員ID</th>
    　　　<td><%= @customer.id %></td>
  　　　　</tr>
  　　<%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
  　　　　<tr>
    　　　<th><%= f.label :"氏名" %></th>
    　　　<td><%= f.text_field :first_name %></td>
   　　　 <td><%= f.text_field :last_name %></td>
    　　　<td></td>
 　   　 </tr>
  　　　　<tr>
        　<th><%= f.label :"フリガナ" %></th>
        　<td><%= f.text_field :first_name_kana %></td>
        　<td><%= f.text_field :last_name_kana %></td>
        　<td></td>
      　</tr>
      　<tr>
        　<th><%= f.label :"郵便番号" %></th>
        　<td><%= f.text_field :postal_code %></td>
        　<td></td>
     　 </tr>
  　　　　<tr>
    　　　<th></th><%= f.label :"住所" %>
    　　　<td colspan="2"><%= f.text_field :address, class:"w-100" %></td>
 　   　 </tr>
        <tr>
        　<th><%= f.label :"電話番号" %></th>
        　<td><%= f.text_field :telephone_number %></td>
        　<td></td>
        </tr>
        <tr>
        　<th><%= f.label :"メールアドレス" %></th>
        　<td><%= f.text_field :email %></td>
        　<td></td>
        </tr>
  　　　　<tr>
    　　　<th><%= f.label :"会員ステータス" %></th>
        　<td>
          　<%= f.radio_button :is_deleted, false %>
          　<%= f.label :is_deleted_false, "有効" %>
          　<%= f.radio_button :is_deleted, true %>
          　<%= f.label :is_deleted_true, "退会" %>
        　</td>
  　　　　</tr>
　　　</table>
　　</div>
　</div>
</div>

　<%= f.submit :"変更を保存", class: "mx-auto d-block btn btn-success mt-3" %>
<% end %>