<h4 class="mt-3 ml-3">
  <span class="bg-light p-2">新規会員登録</span>
</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<table>
  <tr>
    <td><%= f.label :"名前" %></td>
    <td><%= f.label :first_name, "(性)" %>
        <%= f.text_field :first_name, autofocus: true, :placeholder => "令和"  %></td>
    <td><%= f.label :last_name, "(名)" %>
        <%= f.text_field :last_name, autofocus: true, :placeholder => "道子"  %></td>
  </tr>
  <tr>
    <td><%= f.label :"フリガナ" %></td>
    <td><%= f.label :first_name_kana, "(セイ)" %>
        <%= f.text_field :first_name_kana, autofocus: true, :placeholder => "レイワ"  %></td>
    <td><%= f.label :last_name_kana, "(メイ)" %>
        <%= f.text_field :last_name_kana, autofocus: true, :placeholder => "ミチコ"  %></td>
  </tr>
  <tr>
    <td><%= f.label :"メールアドレス" %></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com"  %></td>
    <td></td>
  </tr>
  <tr>
    <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
    <td><%= f.text_field :postal_code, autofocus: true, :placeholder => "0000000"  %></td>
    <td></td>
  </tr>
  <tr>
    <td><%= f.label :"住所" %></td>
    <td colspan="2"><%= f.text_field :address, autofocus: true, class:"w-100", :placeholder => "東京都渋谷区代々木神園町0-0" %></td>
  </tr>
  <tr>
    <td><%= f.label :"電話番号(ハイフンなし)" %></td>
    <td><%= f.text_field :telephone_number, autofocus: true, :placeholder => "00000000000"  %></td>
    <td></td>
  </tr>
  <tr>
    <td><%= f.label :"パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
    </td>
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    <td></td>
  </tr>
  <tr>
    <td> <%= f.label :"パスワード(確認用)" %></td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    <td></td>
  </tr>
</table>
  <%= f.hidden_field :is_deleted, :value => false %>

  <div class="actions">
    <%= f.submit "新規登録", class:"mx-auto d-block btn btn-success" %>
  </div>
<% end %>
<h4>
  <span class="bg-light">既に登録済みの方</span>
</h4>
<p><%= link_to "こちら", new_customer_session_path, class:"d-inline" %>からログインしてください。</p>

<%= render "public/shared/links" %>
