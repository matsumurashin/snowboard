<h4 class="mt-3 ml-3">
  <span class="bg-light p-2">会員情報編集</span>
</h4>

<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <%= form_with model: @customer, url: customers_infomation_path do |f| %>
      <table>
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :first_name %></td>
          <td><%= f.text_field :last_name %></td>
          <td></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :first_name_kana %></td>
          <td><%= f.text_field :last_name_kana %></td>
          <td></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :postal_code %></td>
          <td></td>
        </tr>
        <tr>
          <th>住所</th>
          <td colspan="2"><%= f.text_field :address, class:"w-100" %></td>

        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :telephone_number %></td>
          <td></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
          <td></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-4">
      <%= f.submit "編集内容を保存", class: "mx-auto d-block btn btn-success mt-3" %>
      <% end %>
    </div>


    <div class="col-4">
      <%= link_to "退会する", customers_check_path, class: "btn bg-danger text-white mt-3" %>
    </div>
  </div>
</div>