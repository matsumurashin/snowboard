<h4 class="mt-3 ml-3">
  <span class="bg-light p-2">注文情報確認</span>
</h4>

<div class="container">
  <div class="row">
    <div class="col-md-9">
      <table>
        <thead>
          <tr>
            <th class="border bordered w-25">商品名</th>
            <th class="border bordered w-25">単価(税込)</th>
            <th class="border bordered w-25">数量</th>
            <th class="border bordered w-25">小計</th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
        <tbody>
          <tr>
            <td class="border bordered">
              <%= image_tag cart_item.item.get_image(100,100) %>
              <%= cart_item.item.name %>
            </td>
            <td class="border bordered"><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td class="border bordered"><%= cart_item.amount %></td>
            <td class="border bordered"><%= cart_item.subtotal.to_s(:delimited) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>

    <div class="col-md-3">
      <table>
        <tr>
          <th class="border bordered">送料</th>
          <td class="border bordered"><%= @order.shipping_fee %></td>
        </tr>
        <tr>
          <th class="border bordered">商品合計</th>
          <td class="border bordered"><%= @total.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="border bordered">請求金額</th>
          <td class="border bordered"><%= (@order.shipping_fee + @total).to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <h6><b>支払方法</b></h6>
    <%= @order.payment_method_i18n %>
  </div>

  <div class="row">
    <h6><b>お届け先</b></h6>
    〒<%= @order.postal_code %>
    <%= @order.address %><br>
    <%= @order.name %>

  </div>
  <%= form_with model: @order, url: orders_path, method: :post do |f| %>
    <%= f.hidden_field :payment_method, :value => @order.payment_method %>
    <%= f.hidden_field :postal_code, :value => @order.postal_code %>
    <%= f.hidden_field :address, :value => @order.address%>
    <%= f.hidden_field :name, :value => @order.name %>
    <%= f.hidden_field :amount_billed, :value => @order.shipping_fee + @total %>

    <%= f.submit "注文を確定する", class: "btn btn-success px-5 py-2 font-weight-bold" %>
  <% end %>
</div>