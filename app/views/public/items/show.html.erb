<div class="container mx-auto p-5">
  <div class="row">
    <div class="col-md-2">
      <div class="border">ジャンル検索</div>
      <% @genres.each do |genre| %>
        <%= link_to genre.genre_name, items_path(genre_id: genre.id), class: "border" %><br>
      <% end %>
    </div>

    <div class="col-6 mx-auto">
      <%= image_tag @item.get_image(300,300) %>
    </div>

    <div class="col-4">
      <div class="mt-3">
        <b><%= @item.name %></b><br>
      </div>
      <div class="mt-3">
        <%= @item.introduction %><br>
      </div>
      <div class="mt-3">
        <b>¥<%= @item.with_tax_price %></b>
        <small>(税込)</small>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-3 ml-auto">
      <%= form_with model: @cart_item do |f| %>
        <p>数量を選択してください。</p>
        <%= f.select :amount, *[1..10] %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.submit :"カートに入れる", class: "mx-auto d-block btn btn-success mt-3" %>
      <% end %>
    </div>
    <div class="col-3 px-0">
    </div>
  </div>

  <div class="row" >
    <div class="col-md-10">
    <%= form_with model:[@item, @comment], local: false do |f| %>
       <%= f.text_area :comment, rows:'5',placeholder: "コメント記入欄", class:"form-control mt-3"  %>
       <div class="text-right">
      <%= f.submit "Submit", class: "btn btn-primary mt-3 mb-3" %>
       </div>
    <% end %>
    </div>
  </div>

</div>