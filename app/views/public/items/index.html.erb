<div class="container">
  <div class="row">
    <div class="col-md-2">
      <div class="border">ジャンル検索</div>
      <% @genres.each do |genre| %>
        <%= link_to genre.genre_name, items_path(genre_id: genre.id), class: "border" %><br>
      <% end %>
    </div>

      <h4 class="mt-3 ml-3">
        <% if @genre.present? %>
          <span class="bg-light p-2"><%= @genre.genre_name %>一覧(全<%= @items.size %>件)</span>
        <% else %>
          <span class="bg-light p-2">商品一覧(全<%= @items.size %>件)</span>
        <% end %>
      </h4>

    <% @items.each do |item| %>
    <div class="col-md-3 mt-5 pl-3">
      <%= link_to image_tag(item.get_image(200,200)), item_path(item.id) %><br>
      <%= link_to item.name,item_path(item.id) %><br>
      ¥<%= item.price.to_s(:delimited) %>
    </div>
    <% end %>
  </div>
  <%#= paginate @items %>
</div>